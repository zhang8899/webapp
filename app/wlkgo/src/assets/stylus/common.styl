
// 头部
header 
 .header
    height 48px
    background #f2f2f2
    box-shadow 0 0 5px #f2f2f2
    display flex
    align-items center
    border-bottom: 1px solid #eee
  .logo
    height 38px 
    margin-left 10px
  
  .serach
      border 1px solid #c3c3c3
      border-radius 5px
      height 28px
      margin-top 5px
      background-image url(https://m.wlkgo.com/css/../images/i_search_bg.png)
      background-repeat no-repeat
      background-position 5px center
      background-size 1em
      width 100%
      line-height 28px
      margin-left 10px
      margin-right 10px
      padding-right 10px

  .daka
      height 38px
      line-height 38px
      margin-right 5px
      color #ff0000
      img 
        margin-top 10px
  .h3dian
    margin-right 10px
    img 
      width .32rem
      height .32rem
      padding-top 5px
//底部
footer
  height: 54px;
  width: 100%;
  z-index: 100;
  background: #fff;
  border-top: 1px solid #b5b5b5;
  padding-top: 5px;
  .nav
    display flex
    width 100%
    margin-top 5px
    li
      flex 1
      color #747474
      text-align center
      font-size 12px
      i 
        font-style normal
        width 100%
        display flex
        
        img
          width .3rem
          height .27rem
          margin 0 auto 
footer .nav li.on a
footer .nav li.on 
  color: #ff0000