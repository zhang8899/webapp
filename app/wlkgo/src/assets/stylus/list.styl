@import "./common.styl"
.wrap
  display flex
  flex-direction column
section 
    flex 1
    overflow-x hidden
    overflow-y auto
    background #f2f2f2
    margin-top 6px
    display flex
    .nav-left
        width .75rem
        margin-left 5px
        z-index 1
        height 100%
        position fixed
        a
            display block
            text-align center
            background-color #ffffff
            margin-bottom 5px
            padding 10px 5px
            font-size 14px
        .on
            color #ff0600
    .type
        flex 1
        padding-bottom .55rem
        overflow-y scroll
        padding-left .8rem
        min-height 6.38rem
        .item
            padding 0 5px
            .tit
                background-image url(https://m.wlkgo.com/css/../images/type-more.png)
                background-position right center
                background-repeat no-repeat
                background-size .1rem
                margin-right 10px
                line-height .48rem
                display flex
                i 
                    background url(https://m.wlkgo.com/css/../images/type-tit-dian.png) no-repeat left center
                    background-size 8px
                    padding-left .15rem
                    font-size .16rem
            .des
                background #ffffff
                color: #000000
                overflow hidden
                padding 10px
                a
                    color #000000
                    padding 10px
                    text-align center
                    float left
                    font-size 14px

           
    